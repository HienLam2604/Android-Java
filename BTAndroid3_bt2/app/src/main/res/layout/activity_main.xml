<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtCountClick"
        android:layout_width="365dp"
        android:layout_height="52dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:inputType="textPersonName|text"
        android:text="Hien yeu Ngan"
        app:layout_constraintBottom_toTopOf="@+id/btnCountClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCountClick"
        android:layout_width="365dp"
        android:layout_height="48dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="13dp"
        android:text="Click me!"
        app:layout_constraintBottom_toTopOf="@+id/checkboxBold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCountClick" />

    <CheckBox
        android:id="@+id/checkboxBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="13dp"
        android:text="Use some BOLD typeface"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCountClick" />

    <CheckBox
        android:id="@+id/checkboxColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="Use color text"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkboxBold" />

</androidx.constraintlayout.widget.ConstraintLayout>